<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.arifwidayana.marketstore">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_ri"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_ri"
        android:supportsRtl="true"
        android:theme="@style/Theme.PresidenRI"
        tools:targetApi="32">
        <activity
            android:name="com.arifwidayana.marketstore.ui.SplashScreenActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.arifwidayana.marketstore.ui.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.arifwidayana.marketstore.ui.DetailActivity"
            android:exported="false" />
        <activity
            android:name="com.arifwidayana.marketstore.ui.AboutActivity"
            android:exported="false" />
    </application>

</manifest>